<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DailyPhotosDiary" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_green_300</item>
        <item name="colorPrimaryDark">@color/color_green_300_dark</item>
        <item name="colorPrimaryVariant">@color/color_green_300_dark</item>
        <item name="colorOnPrimary">@color/color_black</item>
        <item name="colorSecondary">@color/color_green_300</item>
        <item name="android:colorBackground">@color/color_gray_150</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="actionBarTheme">@style/ThemeOverlay.DailyPhotosDiary.ActionBar</item>
    </style>

    <style name="ThemeOverlay.DailyPhotosDiary.ActionBar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorControlNormal">@color/color_black</item>
        <item name="actionMenuTextColor">@color/color_black</item>
        <item name="android:textColorPrimary">@color/color_black</item>
    </style>

</resources>